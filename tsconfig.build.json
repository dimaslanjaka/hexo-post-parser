{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    //"pretty": true,
    "outDir": "dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "tmp/tsconfig.tsbuildinfo",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "esModuleInterop": true
  },
  "filesGlob": ["**/*.ts"],
  "include": [
    "./src/index*.ts",
    "./src/build*.ts",
    "./src/generate*.ts",
    "./src/parse*",
    "./src/node",
    "./src/types",
    "./src/shortcodes",
    "./src/utils",
    "./src/gulp",
    "./src/markdown"
  ],
  "exclude": ["**/node_modules", "**/test*", "**/*.spec*.ts", "**/*.test*.ts"]
}
